{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>
    Stages appartenant au {{ formation.nomLong }}
    </h1>
     {% for stageActuel in formation.stages %}
        <div class="card-deck">
            <div class="card">
                <div class="card-body">
                    <a href="{{path('metier_stages_id', {id:stageActuel.id})}}"><h5>{{ stageActuel.titre }}</h5></a>
                        <p>{{ stageActuel.typeEntreprise.nom }}</p>
                        {% for formationCourante in stageActuel.typeFormation %}
                            <p>{{ formationCourante.nomCourt }}</p>
                        {% endfor %}
                </div>
            </div>
            <br/>
    {% endfor %}
</div>
{% endblock %}