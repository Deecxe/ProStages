{% extends 'base.html.twig' %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>
    {{stage.titre}}
    </h1>
    <li class="list-group-item">Mission : {{stage.mission}}</li>
    <li class="list-group-item">Email : {{stage.email}}</li>
    <li class="list-group-item">Entreprise : {{stage.typeEntreprise.nom}}</li>
    <li class="list-group-item">Site web de l'entreprise : {{stage.typeEntreprise.siteweb}}</li>
    <li class="list-group-item">Formation : {% for formationCourante in stage.TypeFormation %} {{ formationCourante.nomCourt}} {% endfor %} </li>
</div>
{% endblock %}